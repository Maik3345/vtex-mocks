{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "module": "commonjs",
    "noUnusedLocals": false,
    "declaration": true,
    "noUnusedParameters": false,
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["./src/**/*", "__mocks__/**/*"],
  "exclude": ["node_modules"]
}
